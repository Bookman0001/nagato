{
  "name": "sirius-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:path": "pathpida --enableStatic --ignorePath .gitignore --watch",
    "build": "pathpida --enableStatic --ignorePath .gitignore && next build",
    "lint": "eslint './**/*.ts{,x}'",
    "lint:fix": "eslint './**/*.ts{,x}' --fix",
    "lint-style": "stylelint ./**/*.{ts,tsx}",
    "prettier": "prettier --check ./**/*.{ts,tsx}",
    "format": "prettier --write ./**/*.{ts,tsx}",
    "compiler-check": "tsc --noEmit",
    "jest": "jest --runInBand",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "eslint",
      "prettier"
    ],
    "*": "stylelint ./**/*.{ts,tsx}"
  },
  "dependencies": {
    "@hookform/resolvers": "3.2.0",
    "@sendgrid/mail": "7.7.0",
    "axios": "1.4.0",
    "dayjs": "1.11.9",
    "next": "13.4.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.45.4",
    "sanitize-html": "2.11.0",
    "styled-components": "6.0.7",
    "swr": "2.2.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@next/eslint-plugin-next": "13.4.13",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@testing-library/cypress": "9.0.0",
    "@testing-library/dom": "9.3.1",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/axios": "0.14.0",
    "@types/jest": "29.5.3",
    "@types/node": "18.17.3",
    "@types/react": "18.2.18",
    "@types/react-test-renderer": "18.0.0",
    "@types/sanitize-html": "2.9.0",
    "@types/styled-components": "5.1.26",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "babel-loader": "9.1.3",
    "babel-plugin-styled-components": "2.1.4",
    "cypress": "12.17.3",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.13",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-cypress": "2.13.3",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "29.6.2",
    "jest-environment-jsdom": "29.6.2",
    "lint-staged": "13.2.3",
    "mockdate": "3.0.5",
    "msw": "1.2.3",
    "next-router-mock": "0.9.7",
    "next-test-api-route-handler": "3.1.8",
    "npm-run-all": "4.1.5",
    "pathpida": "0.21.0",
    "postcss-syntax": "0.36.2",
    "prettier": "3.0.1",
    "react-test-renderer": "^18.2.0",
    "simple-git-hooks": "2.9.0",
    "stylelint": "^15.4.0",
    "stylelint-config-standard": "34.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  }
}
